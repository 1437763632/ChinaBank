
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>项目申请</h1>
    <hr />
    <select id="s1">
        <option value="开发类" onclick="">
            开发类
        </option>
        <option onclick="">
            推广类
        </option>
        <option onclick="">
            研究类
        </option>
        <option onclick="">
            技术支持类
        </option>
        <option onclick="">
            管理服务类
        </option>
        <option onclick="">
            技术转移类
        </option>
    </select>
    <div id="app">

        <table v-show="contactsList.length" class="table-condensed">
            <thead class="navbar-header">
                <tr>
                    <th>序号</th>
                    <th>项目编号</th>
                    <th>项目名称</th>
                    <th>项目类型</th>
                    <th>申请日期</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                <tr v-for="(contact,index) in contactsList">
                    <td>{{contact.Id}}</td>
                    <td>{{contact.Pid}}</td>
                    <td>{{contact.Pname}}</td>
                    <td>{{contact.Ptype}}</td>
                    <td>{{contact.Budget}}</td>
                    <td>{{contact.State}}</td>
                    <td>
                        <div v-if="contact.Id!=''">
                            <a href="#" v-on:click="deleteContactById(contact.Id)">详细</a>
                        </div>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</body>
</html>
<script src="~/Scripts/axios.js"></script>
<script src="~/Scripts/vue.js"></script>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            contactsList: []
        },
        mounted() {
            this.getAllContacts();
        },
        methods: {
            getAllContacts: function () {
                axios.get("http://localhost:8086/GetInitiation"
                ).then(
                    (response) => {
                        this.contactsList = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.contactsList.push(response.data[i]);
                        }
                        this.contactsList.push({ Id: "", Pid: "", Pname: "", Ptype: "", Budget: "", State: "" });
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
        }
    });
