
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .page-bar {
            margin: 40px;
        }

        ul, li {
            margin: 0px;
            padding: 0px;
        }

        li {
            list-style: none
        }

        .page-bar li:first-child > a {
            margin-left: 0px
        }

        .page-bar a {
            border: 1px solid #ddd;
            text-decoration: none;
            position: relative;
            float: left;
            padding: 6px 12px;
            margin-left: -1px;
            line-height: 1.42857143;
            color: #337ab7;
            cursor: pointer
        }

            .page-bar a:hover {
                background-color: #eee;
            }

            .page-bar a.banclick {
                cursor: not-allowed;
            }

        .page-bar .active a {
            color: #fff;
            cursor: default;
            background-color: #337ab7;
            border-color: #337ab7;
        }

        .page-bar i {
            font-style: normal;
            color: #d44950;
            margin: 0px 4px;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <h1>项目申请</h1>
    <hr />
    <select id="s1">
        <option value="开发类" onclick="">
            开发类
        </option>
        <option onclick="">
            推广类
        </option>
        <option onclick="">
            研究类
        </option>
        <option onclick="">
            技术支持类
        </option>
        <option onclick="">
            管理服务类
        </option>
        <option onclick="">
            技术转移类
        </option>
    </select>
    <div id="app">

        <table v-show="contactsList.length" class="table-condensed">
            <thead class="navbar-header">
                <tr>
                    <th>序号</th>
                    <th>项目编号</th>
                    <th>项目名称</th>
                    <th>项目类型</th>
                    <th>申请日期</th>
                    <th>状态</th>
                    <th>操作</th>
                </tr>
                <tr v-for="(contact,index) in contactsList">
                    <td>{{contact.Id}}</td>
                    <td>{{contact.Pid}}</td>
                    <td>{{contact.Pname}}</td>
                    <td>{{contact.Ptype}}</td>
                    <td>{{contact.Budget}}</td>
                    <td>{{contact.State}}</td>
                    <td>
                        <div v-if="contact.Id!=''">
                            <a href="#" v-on:click="deleteContactById(contact.Id)">详细</a>
                        </div>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
    <div class="page-bar">
        <ul>
            <li v-if="cur>1"><a v-on:click="cur--,pageClick()">上一页</a></li>
            <li v-if="cur==1"><a class="banclick">上一页</a></li>
            <li v-for="index in indexs" v-bind:class="{ 'active': cur == index}">
                <a v-on:click="btnClick(index)">{{ index }}</a>
            </li>
            <li v-if="cur!=all"><a v-on:click="cur++,pageClick()">下一页</a></li>
            <li v-if="cur == all"><a class="banclick">下一页</a></li>
            <li><a>共<i>{{all}}</i>页</a></li>
        </ul>
    </div>
</body>
</html>
<script src="~/Scripts/axios.js"></script>
<script src="~/Scripts/vue.js"></script>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            contactsList: [],
            all: 8, //总页数
            cur: 1//当前页码

        },
        mounted() {
            this.getAllContacts();
        },
        methods: {
            getAllContacts: function () {
                axios.get("http://localhost:8086/GetInitiation"
                ).then(
                    (response) => {
                        this.contactsList = [];
                        for (var i = 0; i < response.data.length; i++) {
                            this.contactsList.push(response.data[i]);
                        }
                        this.contactsList.push({ Id: "", Pid: "", Pname: "", Ptype: "", Budget: "", State: "" });
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            btnClick: function (data) {//页码点击事件
                if (data != this.cur) {
                    this.cur = data
                    this.getAllContacts(this.cur);
                }
            },
            pageClick: function () {
                this.getAllContacts(this.cur);
                console.log('现在在' + this.cur + '页');
            }

        },
        computed: {
            indexs: function () {
                var left = 1;
                var right = this.all;
                var ar = [];
                if (this.all >= 5) {
                    if (this.cur > 3 && this.cur < this.all - 2) {
                        left = this.cur - 2
                        right = this.cur + 2
                    } else {
                        if (this.cur <= 3) {
                            left = 1
                            right = 5
                        } else {
                            right = this.all
                            left = this.all - 4
                        }
                    }
                }
                while (left <= right) {
                    ar.push(left)
                    left++
                }
                return ar
            }

        }

    });
   
</script>