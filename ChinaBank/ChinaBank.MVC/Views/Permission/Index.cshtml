
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <style>
        .list {
            width: 600px;
        }

        li {
            list-style-type: none;
            width: 120px;
            height: 50px;
            float: left;
            border: 1px solid;
        }

        .page {
            margin: auto 200px;
            width: 500px;
        }

            .page span {
                width: 100px;
                margin-left: 30px;
            }
    </style>
</head>
<body>
    <div class="list">
        <div>
            <ul>
                <li>编号</li>
                <li>权限名称</li>
                <li>权限路径</li>
                <li>操作</li>

            </ul>
        </div>
        <div id="div1"></div>
    </div>
   
</body>
</html>
<script>
    $(function () {
        $.ajax({
            url: 'http://localhost:8086/rbac/permissions',
            type: 'get',
            success: function (data) {
                $(data).each(function (index,data) {
                    var list = '<ul>'
                        + ' <li>' + data.Id+'</li>'
                        + ' <li>' + data.PermissionName+'</li>'
                        + ' <li>' + data.Url+'</li>'
                        + ' <li><a href="/Permission/Update?Id='+ data.Id +'">修改</a></li>'
                        + '</ul>'
                    $("#div1").append(list);
                })
            }
        })
    })
</script>