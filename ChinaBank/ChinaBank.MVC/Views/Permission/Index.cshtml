

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowIndex</title>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
    <link href="~/BootstrapSouce/css/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/vue@2.5.16/dist/vue.js"></script>
    
</head>
<body>
    <div id="app" class="div-td">
        <input type="button" value="ajax添加" onclick="location.href='Add'" />
        <input type="button" value="vue添加" onclick="location.href='update'" />
        <table v-show="list.length" class="table-condensed" border="1">
            <tr>
                <th>ID</th>
                <th>权限名称</th>
                <th>权限路径</th>
                <th>编辑</th>
            </tr>
            <tr v-for="item in list ">
                <td>{{item.Id}}</td>
                <td><input type="text" v-model="item.PermissionName" /></td>
                <td><input type="text" v-model="item.Url" /></td>

                <td>
                    <div v-if="item.ID!=''">
                        <a href="#" v-on:click="UptQCPlan(item.Id,item.PermissionName,item.Url)">修改</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#app",
        data: {
            list: [],
        },
        mounted() {
            this.getList();
        },
        methods: {
            //获取质检计划信息
            getList: function () {
                axios.get('http://localhost:8086/rbac/permissions').then((response) => {
                    this.list = [];
                    for (var i = 0; i < response.data.length; i++) {
                        this.list.push(response.data[i]);
                    }
                },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
            //修改信息
            UptQCPlan: function (Id, PermissionName, Url) {
                var params = new URLSearchParams();
                params.append('Id', Id);
                params.append('PermissionName', PermissionName);
                params.append('Url', Url);
                axios.post('http://localhost:8086/rbac/UpdatePermission', params).then(
                    (response) => {
                        console.log(response.data);
                        if (response.data > 0) {
                            alert("修改成功!!!");
                            this.getList();
                        }
                        //console.info(this.list);
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },

        },

    })
</script>
