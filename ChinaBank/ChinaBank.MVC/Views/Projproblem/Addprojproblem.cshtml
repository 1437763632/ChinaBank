
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Addprojproblem</title>
    <script src="~/Scripts/axios.js"></script>
    <script src="~/Scripts/vue.js"></script>
</head>
<body>
    <div id="add">
        <table class="table table-hover">
            <tr>
                <td>状态: </td>
                <td><input type="text" v-model="Probstate" /></td>
            </tr>
            <tr>
                <td>问题名称:</td>
                <td><input type="text" v-model="Probname" /></td>
            </tr>
            <tr>
                <td>问题优先级: </td>
                <td><input type="text" v-model="Probpriority" /></td>
            </tr>
            <tr>
                <td>提出人:</td>
                <td><input type="text" v-model="Introducer" /></td>
            </tr>
            <tr>
                <td>当前解决人: </td>
                <td><input type="text" v-model="Currentperson" /></td>
            </tr>
            <tr>
                <td>辅助解决人:</td>
                <td><input type="text" v-model="Assistperson" /></td>
            </tr>
            <tr>
                <td>提出日期: </td>
                <td><input type="text" v-model="Inriqi" /></td>
            </tr>
            <tr>
                <td><a href="javascript:;" v-on:click="AddQCPlan1(Probstate,Probname,Probpriority,Introducer,Currentperson,Assistperson,Inriqi)">添加</a></td>
                <td><a href="#" onclick="location.href='Index'">显示</a></td>
            </tr>
        </table>
    </div>
</body>
</html>
<script type="text/javascript">
    var vm = new Vue({
        el: "#add",
        data: {
            //Target: [],
            RoleName: "",
            RoleDescribe: ""
        },
        mounted() {
            //this.AddQCPlan1();
        },
        methods:
        {
            //保存
            AddQCPlan1: function (Probstate, Probname, Probpriority, Introducer, Currentperson, Assistperson, Inriqi) {
                console.log(1);
                var params = new URLSearchParams();
                params.append('Probstate', Probstate);
                params.append('Probname', Probname);
                params.append('Probpriority', Probpriority);
                params.append('Introducer', Introducer);
                params.append('Currentperson', Currentperson);
                params.append('Assistperson', Assistperson);
                params.append('Inriqi', Inriqi);
                axios.post('http://localhost:8086/projproblem/Add', params).then(
                    (response) => {
                        alert(response)
                        alert("添加成功")
                    },
                    (response) => {
                        alert(response.status);
                    }
                ).catch(function (response) {
                    alert(response);
                });
            },
        },
        computed: {
        }
    });
</script>